<div class="container">

	<h1>カート</h1>

	<% @cart_items.each do |cart_item| %>

	<table>
		<tbody>
			<p><%= attachment_image_tag cart_item.cd, :jacket_image, :fill, 200, 200, fallback: "no_cd_image.jpg", :size => '200' %></p>

			<tr>
				<td>商品名</td>
				<td><%= cart_item.cd.cd_title %></td>
			</tr>
			<tr>
				<td>値段</td>
				<td>¥<%= cart_item.cd.price.to_s(:delimited, delimiter: ',') %></td>
			</tr>
			<tr>
				<td>数量</td>
				<td><%= cart_item.product_num %>枚</td>
			</tr>
			<tr>
				<td>小計</td>
				<td><% subtotal = cart_item.product_num * cart_item.cd.price %>
					¥<%= subtotal.to_s(:delimited, delimiter: ',') %>
				</td>
			</tr>
		</tbody>
	</table>

	<%= link_to "削除", cart_item_path(cart_item) , method: :delete, data: {confirm: '削除してよろしいですか？'} %>
	<% end %>


	<%= link_to "購入へ進む", create_order_path(cart_id: @cart.id), method: :post %>



</div>