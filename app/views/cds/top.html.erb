<div>
	<h1>商品一覧</h1>


	<% @cd.each do |cd| %>
	<%= attachment_image_tag cd, :jacket_image, :fill, 200, 200, fallback: "no_cd_image.jpg", :size => '200' %>
	<h4><%= cd.recommendedgit %></h4>
	<ul>
		<li>
			<%= link_to cd.cd_title, cd_path(cd.id) %>
		</li>
		<li>
			<%= cd.artist.artist_name %>
		</li>
		<li>
			<%= cd.price %>円
		</li>
		<li>
			<%= cd.stock %>個
		</li>
	</ul>

	<% end %>

</div>